{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The person's name."
        },
        "age": {
            "description": "Age in years which must be equal to or greater than 18.",
            "type": "integer",
            "minimum": 18
        }
    },
    "required": ["name", "age"]
}
